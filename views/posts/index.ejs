<% layout('layouts/boilerplate') -%>

<h1>Posts Index!</h1>
<% posts.forEach(post => { %>
  <div>
    <h2><%= post.title %></h2>
    <p><%= post.price %></p>
    <p><%= post.description %></p>
    <p><%= post.location %></p>
    <div>
      <a href="/posts/<%= post.id %>/">View More</a>
    </div>
  </div>
<% }); %>